<Window x:Class="WpfSampleApplication.RepeatButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSampleApplication"
        mc:Ignorable="d"
        Title="RepeatButton" Height="450" Width="800">
    <Grid>
        <DockPanel>
        <RepeatButton Width="100" Height="200" DockPanel.Dock="Top" 
              Delay="500" Interval="100" 
              Click="Increase">
            Increase
        </RepeatButton>

        <TextBlock Name="valueText" 
           Width="100" DockPanel.Dock="Top" 
           TextAlignment="Center" FontSize="16">
  0
        </TextBlock>

        <RepeatButton Width="100" Height="200" DockPanel.Dock="Top" 
              Delay="500" Interval="100" 
              Click="Decrease">
            Decrease
        </RepeatButton>
        </DockPanel>
    </Grid>
</Window>
